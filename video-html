    <script>
        // DOM Elements
        const uploadArea = document.getElementById('upload-area');
        const uploadBtn = document.getElementById('upload-btn');
        const videoUpload = document.getElementById('video-upload');
        const videoPreview = document.getElementById('video-preview');
        const videoPlayer = document.getElementById('video-player');
        const progressSection = document.getElementById('progress-section');
        const progressBar = document.getElementById('progress-bar');
        const progressPercent = document.getElementById('progress-percent');
        const downloadOptions = document.getElementById('download-options');
        const statusMessage = document.getElementById('status-message');
        
        // Event Listeners
        uploadArea.addEventListener('click', () => videoUpload.click());
        uploadBtn.addEventListener('click', () => videoUpload.click());
        
        videoUpload.addEventListener('change', handleFileUpload);
        uploadArea.addEventListener('dragover', handleDragOver);
        uploadArea.addEventListener('drop', handleDrop);
        
        // Functions
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.style.borderColor = 'var(--primary)';
            uploadArea.style.backgroundColor = 'rgba(108, 92, 231, 0.1)';
        }
        
        function handleDrop(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.style.borderColor = '#b2bec3';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                videoUpload.files = e.dataTransfer.files;
                handleFileUpload();
            }
        }
        
        function handleFileUpload() {
            if (videoUpload.files.length > 0) {
                const file = videoUpload.files[0];
                
                // Reset previous state
                statusMessage.style.display = 'none';
                statusMessage.className = 'status-message';
                downloadOptions.style.display = 'none';
                
                // Check file size (max 5GB)
                if (file.size > 5 * 1024 * 1024 * 1024) {
                    showStatusMessage('Error: File size too large (maximum 5GB allowed)', 'error');
                    return;
                }
                
                // Check file type
                const validTypes = ['video/mp4', 'video/quicktime', 'video/x-msvideo', 'video/x-matroska', 'video/x-ms-wmv'];
                if (!validTypes.includes(file.type)) {
                    showStatusMessage('Error: Unsupported file type. Please upload MP4, MOV, AVI, MKV, or WMV files.', 'error');
                    return;
                }
                
                // Show video preview
                const videoURL = URL.createObjectURL(file);
                videoPlayer.src = videoURL;
                videoPreview.style.display = 'block';
                
                // Start conversion process
                startConversionProcess();
            }
        }
        
        function startConversionProcess() {
            progressSection.style.display = 'block';
            
            // Simulate conversion progress
            let progress = 0;
            const interval = setInterval(() => {
                progress += 2;
                if (progress > 100) progress = 100;
                
                progressBar.style.width = progress + '%';
                progressPercent.textContent = progress + '%';
                
                if (progress === 100) {
                    clearInterval(interval);
                    setTimeout(() => {
                        progressSection.style.display = 'none';
                        downloadOptions.style.display = 'block';
                        showStatusMessage('Success: Your video has been converted to HD quality!', 'success');
                    }, 500);
                }
            }, 100);
        }
        
        function downloadVideo(size) {
            showStatusMessage(`Starting download (${size} version)...`, 'success');
            
            // In a real implementation, this would trigger the actual download from server
            // For demo purposes, we'll simulate a download
            setTimeout(() => {
                const blob = new Blob([`Simulated HD video file (${size} version)`], {type: 'video/mp4'});
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `hd_video_${size.toLowerCase()}.mp4`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                showStatusMessage(`Download complete (${size})!`, 'success');
            }, 1500);
        }
        
        function showStatusMessage(message, type) {
            statusMessage.textContent = message;
            statusMessage.className = `status-message ${type}`;
            statusMessage.style.display = 'block';
        }
    </script>
</body>
